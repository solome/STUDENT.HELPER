<common:LayoutAwarePage
    x:Name="pageRoot"
    x:Class="学生助手.STUDENT.HELPER.UpdateDataPage"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:学生助手.STUDENT.HELPER"
    xmlns:common="using:学生助手.STUDENT.HELPER.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>

        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
        <x:String x:Key="AppName">学生助手|STUDENT HELPER</x:String>
    </Page.Resources>

    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid Style="{StaticResource LayoutRootStyle}">
        <Grid.Background>
            <ImageBrush ImageSource="Assets/background.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="backButton" Click="GoBack" IsEnabled="{Binding Frame.CanGoBack, ElementName=pageRoot}" Style="{StaticResource BackButtonStyle}"/>
            <TextBlock x:Name="pageTitle" Grid.Column="1" Text="{StaticResource AppName}" Style="{StaticResource PageHeaderTextStyle}" FontFamily="SketchFlow Print" FontWeight="Bold"/>
        </Grid>
        <Canvas>

        </Canvas>
        <TextBlock HorizontalAlignment="Left" Margin="164,60,0,0" Grid.Row="1" TextWrapping="Wrap" Text="日期选择：" VerticalAlignment="Top" FontSize="32" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="164,140,0,0" Grid.Row="1" TextWrapping="Wrap" Text="课程名：" VerticalAlignment="Top" FontSize="32" FontWeight="Bold" Foreground="#FFE21F66"/>
        <TextBox HorizontalAlignment="Left" Margin="288,136,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="38" Width="352" Background="{x:Null}" BorderThickness="0,0,0,2" FontSize="21" FontWeight="Bold" Foreground="#FFC1FFF9" TextAlignment="Center" FontFamily="Microsoft YaHei UI" BorderBrush="#FFC32FDA"/>
        <TextBlock HorizontalAlignment="Left" Margin="164,204,0,0" Grid.Row="1" TextWrapping="Wrap" Text="开课地点：" VerticalAlignment="Top" FontSize="32" FontWeight="Bold"/>
        <TextBox HorizontalAlignment="Left" Margin="318,200,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="38" Width="322" Background="{x:Null}" BorderThickness="0,0,0,2" FontSize="21" FontWeight="Bold" Foreground="#FFABFFB7" TextAlignment="Center" FontFamily="Microsoft YaHei UI" BorderBrush="#FFB62121"/>
        <TextBlock HorizontalAlignment="Left" Margin="164,266,0,0" Grid.Row="1" TextWrapping="Wrap" Text="授课教师：" VerticalAlignment="Top" FontSize="32" FontWeight="Bold" Foreground="#FF82EAC4"/>
        <TextBox HorizontalAlignment="Left" Margin="318,262,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="38" Width="322" Background="{x:Null}" BorderThickness="0,0,0,2" FontSize="21" FontWeight="Bold" Foreground="#FFAEB2FD" TextAlignment="Center" FontFamily="Microsoft YaHei UI" BorderBrush="#FFD6CE16"/>
        <TextBlock HorizontalAlignment="Left" Margin="164,330,0,0" Grid.Row="1" TextWrapping="Wrap" Text="选用教材：" VerticalAlignment="Top" FontSize="32" FontWeight="Bold"/>
        <TextBox HorizontalAlignment="Left" Margin="318,326,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="38" Width="322" Background="{x:Null}" BorderThickness="0,0,0,2" FontSize="21" FontWeight="Bold" Foreground="#FFF190FB" TextAlignment="Center" FontFamily="Microsoft YaHei UI" BorderBrush="#FFDE11D5"/>
        <TextBlock HorizontalAlignment="Left" Margin="164,406,0,0" Grid.Row="1" TextWrapping="Wrap" Text="授课时间安排" VerticalAlignment="Top" FontSize="36" FontWeight="Bold">
            <TextBlock.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FF3BB946"/>
                    <GradientStop Color="#FF0C1783"/>
                    <GradientStop Color="#FFD8EDF9" Offset="1"/>
                    <GradientStop Color="#FF92ABF0" Offset="0.03"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="172,464,0,0" Grid.Row="1" TextWrapping="Wrap" Text="起始时间：" VerticalAlignment="Top" FontSize="32" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="428,464,0,0" Grid.Row="1" TextWrapping="Wrap" Text="结束时间：" VerticalAlignment="Top" FontSize="32" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="651,32,0,0" Grid.Row="1" TextWrapping="Wrap" Text="课程的备注描述：" VerticalAlignment="Top" FontSize="36" FontWeight="Bold" Foreground="#FFC78888" Height="53"/>
        <TextBox HorizontalAlignment="Left" Margin="710,82,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="434" Width="630" Background="{x:Null}" FontFamily="Global User Interface" FontSize="36" Foreground="#FFB5F1FB" Grid.Row="1" BorderBrush="#FFFF92FA" AcceptsReturn="True"/>
        <Button Click="CancelButton_Click" Content="取消" BorderThickness="0" HorizontalAlignment="Left" Margin="1032,516,0,0" Grid.Row="1" VerticalAlignment="Top" Height="66" Width="208" Background="{x:Null}" FontSize="32" Foreground="#FFF5D3EF"/>
        <Button Click="OKButton_Click" Content="确定" BorderThickness="0" HorizontalAlignment="Left" Margin="852,516,0,0" Grid.Row="1" VerticalAlignment="Top" Height="66" Width="208" Background="{x:Null}" FontSize="32" Foreground="#FF5C70F0"/>
        <ComboBox HorizontalAlignment="Left" Margin="325,58,0,0" Grid.Row="1" VerticalAlignment="Top" Width="110" Height="44" Background="{x:Null}" BorderBrush="#CC00E8FF" Foreground="#FF14E60A" FontSize="21" FontWeight="Bold" FontFamily="Microsoft YaHei UI" SelectedIndex="0" BorderThickness="0,0,0,2" Opacity="0.8">
            <ComboBoxItem Content="星期日"/>
            <ComboBoxItem Content="星期一"/>
            <ComboBoxItem Content="星期二"/>
            <ComboBoxItem Content="星期三"/>
            <ComboBoxItem Content="星期四"/>
            <ComboBoxItem Content="星期五"/>
            <ComboBoxItem Content="星期六"/>
        </ComboBox>
        <ComboBox HorizontalAlignment="Left" Margin="333,454,0,0" Grid.Row="1" VerticalAlignment="Top" Width="78" Height="44" Background="{x:Null}" BorderBrush="#CC9CAC01" Foreground="#FFFF0046" FontSize="21" FontWeight="Bold" FontFamily="Microsoft YaHei UI" SelectedIndex="0" BorderThickness="0,0,0,2">
            <ComboBoxItem Content="00"/>
            <ComboBoxItem Content="01"/>
            <ComboBoxItem Content="02"/>
            <ComboBoxItem Content="03"/>
            <ComboBoxItem Content="04"/>
            <ComboBoxItem Content="05"/>
            <ComboBoxItem Content="06"/>
            <ComboBoxItem Content="07"/>
            <ComboBoxItem Content="08"/>
            <ComboBoxItem Content="09"/>
            <ComboBoxItem Content="10"/>
            <ComboBoxItem Content="11"/>
            <ComboBoxItem Content="12"/>
            <ComboBoxItem Content="13"/>
            <ComboBoxItem Content="14"/>
            <ComboBoxItem Content="15"/>
            <ComboBoxItem Content="16"/>
            <ComboBoxItem Content="17"/>
            <ComboBoxItem Content="18"/>
            <ComboBoxItem Content="19"/>
            <ComboBoxItem Content="20"/>
            <ComboBoxItem Content="21"/>
            <ComboBoxItem Content="22"/>
            <ComboBoxItem Content="23"/>
            <ComboBoxItem Content="24"/>
        </ComboBox>
        <ComboBox HorizontalAlignment="Left" Margin="589,458,0,0" Grid.Row="1" VerticalAlignment="Top" Width="78" Height="44" Background="{x:Null}" BorderBrush="#CCDC00FF" Foreground="#FFFF0DE9" FontSize="21" FontWeight="Bold" FontFamily="Microsoft YaHei UI" SelectedIndex="0" BorderThickness="0,0,0,2">
            <ComboBoxItem Content="00"/>
            <ComboBoxItem Content="05"/>
            <ComboBoxItem Content="10"/>
            <ComboBoxItem Content="15"/>
            <ComboBoxItem Content="20"/>
            <ComboBoxItem Content="25"/>
            <ComboBoxItem Content="30"/>
            <ComboBoxItem Content="35"/>
            <ComboBoxItem Content="40"/>
            <ComboBoxItem Content="45"/>
            <ComboBoxItem Content="50"/>
            <ComboBoxItem Content="55"/>
        </ComboBox>
        <Image HorizontalAlignment="Left" Height="150" Margin="1048,6,0,0" VerticalAlignment="Top" Width="310" Source="Assets/SplashScreen.png" Grid.RowSpan="2"/>
        <VisualStateManager.VisualStateGroups>

            <!-- Visual states reflect the application's view state -->
            <VisualStateGroup x:Name="ApplicationViewStates">
                <VisualState x:Name="FullScreenLandscape"/>
                <VisualState x:Name="Filled"/>

                <!-- The entire page respects the narrower 100-pixel margin convention for portrait -->
                <VisualState x:Name="FullScreenPortrait">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource PortraitBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>

                <!-- The back button and title have different styles when snapped -->
                <VisualState x:Name="Snapped">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pageTitle" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedPageHeaderTextStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</common:LayoutAwarePage>
